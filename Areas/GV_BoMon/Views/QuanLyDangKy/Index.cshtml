@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<DATN_TMS.Areas.GV_BoMon.Models.QuanLyDangKyViewModel>

@{
    ViewData["Title"] = "Duyệt đăng ký đồ án";
}

<style>
    /* CSS Khung và Bảng */
    .content-card {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        min-height: calc(100vh - 140px);
    }
    .table-responsive { width: 100%; margin-bottom: 20px; flex: 1; }
    
    /* CSS Toolbar */
    .toolbar-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 20px;
        gap: 15px;
        flex-wrap: wrap;
    }
    .filter-wrapper { display: flex; gap: 15px; flex-wrap: wrap; }
    .toolbar-right { display: flex; align-items: center; gap: 10px; }

    /* CSS Phân trang */
    .pagination-container { display: flex; justify-content: center; padding-top: 15px; border-top: 1px solid #eee; }
    .pagination { display: flex; padding-left: 0; list-style: none; gap: 5px; margin-bottom: 0; }
    .pagination li a, .pagination li span { padding: 8px 16px; border: 1px solid #dee2e6; border-radius: 4px; color: #333; text-decoration: none; background-color: #fff; transition: all 0.2s; }
    .pagination li a:hover { background-color: #e9ecef; border-color: #dee2e6; }
    .pagination li.active span { background-color: #0d6efd; color: white; border-color: #0d6efd; }
    .pagination li.disabled span, .pagination li.disabled a { color: #6c757d; pointer-events: none; background-color: #fff; border-color: #dee2e6; }

    /* CSS Nút và Label */
    /* .action-btn { border: none; background: none; cursor: pointer; padding: 0 5px; font-size: 16px; transition: color 0.2s; }
    .btn-approve:hover { color: #198754; }
    .btn-reject:hover { color: #dc3545; } 
    .btn-view:hover { color: #0d6efd; }   */
    
    .filter-label { font-weight: 500; margin-bottom: 5px; display: block; color: #333; }
    
    .page-header-row { margin-bottom: 10px; }
    .page-title { font-size: 20px; font-weight: 700; color: #2c3e50; margin: 0; text-transform: uppercase; }
    
    .toolbar-input {
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        outline: none;
    }
    .toolbar-input:focus { border-color: #484BE0; box-shadow: 0 0 0 2px rgba(72, 75, 224, 0.1); }
    /* Mau` Trạng thái */
    .status-badge {
        padding: 5px 12px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
        white-space: nowrap;
        display: inline-block;
    }
   
    .status-approved { background-color: #e8f8f5; color: #27ae60; border: 1px solid #27ae60; } 
    .status-rejected { background-color: #fdedec; color: #c0392b; border: 1px solid #c0392b; } 
    .status-waiting { background-color: #fef9e7; color: #f39c12; border: 1px solid #f39c12; }
    th { background-color: #f8f9fa; padding: 12px; text-align: left; font-weight: 700; border-bottom: 2px solid #eee; font-size: 13px; color: #444; }
    td { padding: 12px; border-bottom: 1px solid #eee; vertical-align: middle; font-size: 13px; color: #333; }
</style>

<div class="content-body">
    <div class="content-card">
        <div class="page-header-row">
            <h2 class="page-title">Duyệt đăng ký nguyện vọng</h2>
        </div>

        <div class="toolbar-row">
            <form method="get" asp-action="Index" id="filterForm" class="filter-wrapper">
                <div class="filter-item">
                    <span class="filter-label">Đợt đồ án</span>
                    <select name="dotId" id="dotSelect" class="toolbar-input" asp-items="ViewBag.ListDot" onchange="performSearch()">
                        <option value="">-- Tất cả đợt --</option>
                    </select>
                </div>
                <div class="filter-item">
                    <span class="filter-label">Khóa</span>
                    <select name="khoaId" id="khoaSelect" class="toolbar-input" asp-items="ViewBag.ListKhoa" onchange="performSearch()">
                        <option value="">-- Tất cả khóa --</option>
                    </select>
                </div>
                <div class="filter-item">
                    <span class="filter-label">Chuyên ngành</span>
                    <select name="chuyenNganhId" id="nganhSelect" class="toolbar-input" onchange="performSearch()">
                        <option value="">-- Tất cả --</option>
                        <option value="CNPM">Công nghệ phần mềm</option>
                        <option value="HTTT">Hệ thống thông tin</option>
                    </select>
                </div>
            </form>

            <div class="toolbar-right">
                <div style="display:flex; align-items:center; gap:10px;">
                    <span class="filter-label" style="margin-bottom:0;">Tìm kiếm:</span>
                    <input type="text" id="searchInput" name="searchString" 
                           value="@ViewBag.CurrentFilter" 
                           class="toolbar-input" 
                           placeholder="Nhập MSSV hoặc Họ tên..." 
                           style="width: 250px;">
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>MSSV</th>
                        <th>Họ tên</th>
                        <th>Khóa</th>
                        <th>Chuyên ngành</th>
                        <th class="text-center">Tín chỉ</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaSinhVien</td>
                                <td>@item.HoTen</td> 
                                <td>@item.TenKhoa</td>
                                <td>@item.TenChuyenNganh</td>
                                <td class="text-center">@item.TinChiTichLuy</td>
                                <td class="text-center" id="status-@item.Id">
                                    @if (item.TrangThai == 1)
                                    {
                                        <span class="status-badge status-approved">Đã duyệt</span>
                                    }
                                    else if (item.TrangThai == 2)
                                    {
                                        <span class="status-badge status-rejected">Từ chối</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-waiting">Chờ duyệt</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <button class="action-btn btn-approve" title="Duyệt" onclick="duyetDangKy(@item.Id)" style="color: #27ae60;">
                                        <i class="fa-solid fa-check"></i>
                                    </button>
                                    <button class="action-btn btn-reject" title="Từ chối" onclick="tuChoiDangKy(@item.Id)" style="color: #dc3545;">
                                        <i class="fa-solid fa-xmark"></i>
                                    </button>
                                    <a href="@Url.Action("KetQuaHocTap", new { id = item.IdSinhVien })" class="action-btn btn-view" title="Xem KQHT" style="color: #2980b9;">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="7" class="text-center text-muted p-4">Không tìm thấy dữ liệu phù hợp.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="pagination-container">
             @Html.PagedListPager(Model, page => Url.Action("Index", new { page, dotId = ViewBag.CurrentDotId, khoaId = ViewBag.CurrentKhoaId, chuyenNganhId = ViewBag.CurrentChuyenNganh, searchString = ViewBag.CurrentFilter }),
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                LinkToPreviousPageFormat = "«",
                LinkToNextPageFormat = "»",
                EllipsesFormat = "...",
                MaximumPageNumbersToDisplay = 5
            })
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // --- 1. LOGIC TÌM KIẾM REAL-TIME ---
    const searchInput = document.getElementById('searchInput');
    const tableContainer = document.querySelector('.table-responsive');
    const paginationContainer = document.querySelector('.pagination-container');
    let timeout = null;

    if (searchInput) {
        searchInput.addEventListener('input', function () {
            clearTimeout(timeout);
            timeout = setTimeout(function () {
                performSearch();
            }, 500); 
        });
    }

    function performSearch() {
        const keyword = document.getElementById('searchInput').value;
        const dotId = document.getElementById('dotSelect').value;
        const khoaId = document.getElementById('khoaSelect').value;
        const nganhId = document.getElementById('nganhSelect').value;

        const url = `@Url.Action("Index")?searchString=${encodeURIComponent(keyword)}&dotId=${dotId}&khoaId=${khoaId}&chuyenNganhId=${nganhId}`;

        fetch(url)
            .then(response => response.text())
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                
                const newTable = doc.querySelector('.table-responsive').innerHTML;
                if (tableContainer) tableContainer.innerHTML = newTable;

                const newPagination = doc.querySelector('.pagination-container').innerHTML;
                if (paginationContainer) paginationContainer.innerHTML = newPagination;
            })
            .catch(err => console.error('Lỗi tìm kiếm:', err));
    }

    // --- 2. CÁC HÀM XỬ LÝ NÚT BẤM ---
    function duyetDangKy(id) {
        Swal.fire({
            title: 'Duyệt sinh viên này?',
            text: "Sinh viên sẽ được tham gia vào đợt đồ án!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#27ae60',
            confirmButtonText: 'Duyệt ngay',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                callApiChangeStatus(id, '@Url.Action("DuyetDangKy")', 1);
            }
        });
    }

    function tuChoiDangKy(id) {
        Swal.fire({
            title: 'Từ chối đăng ký?',
            text: "Sinh viên này không đủ điều kiện?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            confirmButtonText: 'Từ chối',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                callApiChangeStatus(id, '@Url.Action("TuChoiDangKy")', 2);
            }
        });
    }

    function callApiChangeStatus(id, url, newStatus) {
        let formData = new FormData();
        formData.append('id', id);

        fetch(url, {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire('Thành công!', data.message, 'success');
                const cell = document.getElementById(`status-${id}`);
                if(newStatus === 1) {
                    cell.innerHTML = '<span class="status-badge status-approved">Đã duyệt</span>';
                } else {
                    cell.innerHTML = '<span class="status-badge status-rejected">Từ chối</span>';
                }
            } else {
                Swal.fire('Lỗi!', data.message, 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire('Lỗi hệ thống', 'Không thể kết nối đến server', 'error');
        });
    }
</script>