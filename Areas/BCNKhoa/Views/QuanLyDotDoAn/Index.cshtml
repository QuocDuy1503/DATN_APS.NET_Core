@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model X.PagedList.IPagedList<DATN_TMS.Models.DotDoAn>

@{
    ViewData["Title"] = "Quản lý đợt đồ án";
}

<style>
    .dotdoan-page { font-family: 'Segoe UI', Tahoma, sans-serif !important; }

    .dotdoan-page .content-card {
        background: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        min-height: calc(100vh - 140px);
        font-family: inherit;
    }

    .page-header-row { margin-bottom: 15px; }
    .page-title { font-size: 20px; font-weight: 700; color: #2c3e50; margin: 0; text-transform: uppercase; }

    .toolbar-row { display:flex; justify-content: space-between; align-items: flex-end; margin-bottom: 20px; gap: 15px; flex-wrap: wrap; }
    .filter-wrapper { display:flex; gap: 12px; align-items: flex-end; flex-wrap: wrap; background: transparent; padding: 0; }
    .filter-item { display: flex; flex-direction: column; gap: 4px; }
    .filter-label { font-weight: 500 !important; font-size: 13px !important; color: #333; display: block; margin-bottom: 4px; }
    .toolbar-input, .form-control { background: #fff !important; font-size: 13px !important; padding: 8px 12px !important; border: 1px solid #ced4da !important; border-radius: 4px !important; height: 36px !important; }
    .toolbar-input:focus, .form-control:focus { border-color: #484BE0 !important; box-shadow: 0 0 0 2px rgba(72, 75, 224, 0.1) !important; outline: none; }

    .btn-primary { background-color: #0d6efd; border-color: #0d6efd; }
    .btn-primary:hover { background-color: #0b5ed7; border-color: #0b5ed7; }

    .table-responsive { border: 1px solid #e5e7eb; border-radius: 8px; overflow: hidden; background: #fff; flex: 1; display: flex; flex-direction: column; }
    .table-scroll { flex: 1; max-height: calc(100vh - 280px); overflow-y: auto; }
    table { width: 100%; border-collapse: collapse; font-size: 13px !important; }
    thead th { position: sticky; top: 0; background: #f3f4f6; z-index: 2; font-weight: 700 !important; padding: 12px 12px; text-align: left; border-bottom: 1px solid #e5e7eb; font-size: 13px !important; color: #444; line-height: 1.4; }
    tbody td { padding: 12px 12px; border-bottom: 1px solid #e5e7eb; vertical-align: middle; font-size: 13px !important; color: #333; }
    tbody tr:hover { background: #f9f9f9; }

    .status-badge { padding: 6px 10px; border-radius: 10px; font-size: 12px; font-weight: 600; color: #fff; background: #6b7280; }
    .status-running { background: #16a34a; }

    .pagination-container { display: flex; justify-content: center; margin-top: 12px; margin-top: auto; padding-top: 8px; }
    .pagination { display: inline-flex; gap: 8px; padding: 0; margin: 0; list-style: none; }
    .pagination li a, .pagination li span { min-width: 42px; height: 38px; border-radius: 6px; border: 1px solid #d1d5db; background: #fff; color: #374151; display: inline-flex; align-items: center; justify-content: center; padding: 0 12px; text-decoration: none; font-weight: 600; transition: all 0.15s ease; }
    .pagination li a:hover { border-color: #2563eb; color: #2563eb; }
    .pagination li.active span { background: #0d6efd; border-color: #0d6efd; color: #fff; box-shadow: 0 6px 18px rgba(13,110,253,0.25); }
    .pagination li.disabled span, .pagination li.disabled a { color: #9ca3af; border-color: #e5e7eb; cursor: default; box-shadow: none; }
</style>

<div class="content-body dotdoan-page">
    <div class="content-card">
        <div class="page-header-row">
            <h2 class="page-title">Quản lý đợt đồ án</h2>
        </div>
        <form method="get" asp-action="Index">
            <div class="toolbar-row">
                <div class="filter-wrapper">
                    <div class="filter-item">
                        <span class="filter-label">Khóa:</span>
                        <select name="khoaId" id="khoaSelect" class="form-control" style="width: 150px;"
                                asp-items="ViewBag.ListKhoa"
                                onchange="this.form.submit()">
                            <option value="">-- Tất cả --</option>
                        </select>
                    </div>

                    <div class="filter-item">
                        <span class="filter-label">Năm học:</span>
                        <select name="namHoc" id="namHocSelect" class="form-control" style="width: 150px;" onchange="this.form.submit()">
                            <option value="">-- Tất cả --</option>
                            @if (ViewBag.ListNamHoc != null)
                            {
                                foreach (SelectListItem item in ViewBag.ListNamHoc)
                                {
                                    <option value="@item.Value" selected="@(item.Value == (ViewBag.CurrentNamHoc as string ?? string.Empty))">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                </div>

                <div class="toolbar-right" style="display:flex; align-items:flex-end; gap:10px;">
                    <div class="search-box" style="display:flex; flex-direction:column; gap:4px; align-items:flex-start;">
                        <span class="filter-label">Tìm kiếm</span>
                        <input type="text" id="searchInput" name="searchString"
                               value="@ViewBag.CurrentFilter"
                               class="toolbar-input search-input"
                               placeholder="Nhập tên đợt..." style="width: 240px;" />
                    </div>
                    <button type="button" class="btn btn-primary" id="btnOpenModal">
                        <i class="fa-solid fa-plus"></i> Thêm đợt đồ án
                    </button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <div class="table-scroll">
                <table>
                    <thead>
                        <tr>
                            <th>Tên đợt</th>
                            <th>Khóa</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenDot</td>
                                <td>@item.IdKhoaHocNavigation?.TenKhoa</td>
                                <td>@(item.NgayBatDauDot.HasValue ? item.NgayBatDauDot.Value.ToString("dd/MM/yyyy") : "---")</td>
                                <td>@(item.NgayKetThucDot.HasValue ? item.NgayKetThucDot.Value.ToString("dd/MM/yyyy") : "---")</td>
                                <td>
                                    @if (item.TrangThai == true)
                                    {
                                        <span class="status-badge status-running">Đang diễn ra</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge">Đã đóng</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn-edit-icon" title="Sửa">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <button type="button" class="action-btn btn-delete-icon btn-delete-confirm" data-id="@item.Id" title="Xóa" style="border:none; background:none; cursor:pointer;">
                                        <i class="fa-solid fa-xmark"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <partial name="_CreateModal" />

        <div class="pagination-container">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, khoaId = ViewBag.CurrentKhoaId, namHoc = ViewBag.CurrentNamHoc, searchString = ViewBag.CurrentFilter }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    LinkToPreviousPageFormat = "«",
                    LinkToNextPageFormat = "»",
                    EllipsesFormat = "...",
                    MaximumPageNumbersToDisplay = 5
                })
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    document.addEventListener("DOMContentLoaded", function () {

        var successMsg = '@Html.Raw(TempData["SuccessMessage"])';
        var errorMsg = '@Html.Raw(TempData["ErrorMessage"])';

        if (successMsg && successMsg.length > 0) {
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                text: successMsg,
                confirmButtonText: 'Đóng',
                confirmButtonColor: '#484BE0',
                timer: 3000 
            });
        }

        if (errorMsg && errorMsg.length > 0) {
            Swal.fire({
                icon: 'error',
                title: 'Có lỗi xảy ra',
                text: errorMsg,
                confirmButtonText: 'Kiểm tra lại',
                confirmButtonColor: '#d33'
            });
        }



        // TÌM KIẾM REAL-TIME
        const searchInput = document.getElementById('searchInput');
        const khoaSelect = document.getElementById('khoaSelect');
        const namHocSelect = document.getElementById('namHocSelect');
        const tableContainer = document.querySelector('.table-responsive'); // Vùng chứa bảng
        let timeout = null; // Biến để lưu độ trễ

        if (searchInput) {
            searchInput.addEventListener('input', function () {
                clearTimeout(timeout);
                timeout = setTimeout(function () {
                    performSearch();
                }, 500); 
            });
        }

        function performSearch() {
            // Lấy giá trị từ ô tìm kiếm và dropdown khóa/học kỳ/năm học
            const keyword = searchInput.value;
            const khoaId = khoaSelect ? khoaSelect.value : "";
            const namHoc = namHocSelect ? namHocSelect.value : "";
            const hocKiId = "";

            // Tạo URL request (Sử dụng URL hiện tại và thay đổi tham số)
            const url = `@Url.Action("Index")?searchString=${encodeURIComponent(keyword)}&khoaId=${khoaId}&namHoc=${namHoc}`;

            // Gọi AJAX (Fetch API)
            fetch(url)
                .then(response => response.text())
                .then(html => {
                    // Server trả về toàn bộ trang HTML
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    
                    // Lấy bảng mới từ HTML trả về
                    const newTableContent = doc.querySelector('.table-responsive').innerHTML;
                    
                    // Thay thế bảng cũ bằng bảng mới
                    if (tableContainer) {
                        tableContainer.innerHTML = newTableContent;
                        rebindDeleteEvents(); 
                    }
                })
                .catch(err => console.error('Lỗi tìm kiếm:', err));
        }
        window.rebindDeleteEvents = function() {
            const deleteBtns = document.querySelectorAll('.btn-delete-confirm');
            
            deleteBtns.forEach(btn => {
                btn.removeEventListener('click', handleDeleteClick);
                btn.addEventListener('click', handleDeleteClick);
            });
        };

        function handleDeleteClick() {
            const id = this.getAttribute('data-id');

            // Hộp thoại xác nhận mới
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: "Bạn có chắc chắn muốn xóa đợt này không? Hành động này không thể hoàn tác!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33', 
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Vâng, xóa nó!',
                cancelButtonText: 'Hủy bỏ'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteId').value = id;
                    document.getElementById('deleteForm').submit();
                }
            });
           }
        rebindDeleteEvents();
    });
</script>
    <form id="deleteForm" asp-action="Delete" method="post" style="display:none;">
        <input type="hidden" name="id" id="deleteId" />
    </form>
</div>