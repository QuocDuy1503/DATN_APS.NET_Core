<style>
    /* --- CSS CHO MODAL (POPUP) --- */
    .modal-overlay {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .modal-overlay.show {
        display: flex;
        opacity: 1;
    }

    .modal-dialog {
        background-color: white;
        width: 100%;
        max-width: 500px;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        overflow: hidden;
        transform: translateY(-20px);
        transition: transform 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .modal-overlay.show .modal-dialog {
        transform: translateY(0);
    }

    /* --- HEADER --- */
    .modal-header {
        background-color: #fff;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #f0f0f0;
    }

    .modal-title {
        font-weight: 700;
        font-size: 18px;
        color: #333;
    }

    .btn-close-custom {
        background: transparent;
        border: 1px solid #ddd;
        border-radius: 4px;
        color: #999;
        font-size: 20px;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }
    .btn-close-custom:hover {
        background-color: #f5f5f5;
        color: #333;
    }

    /* --- BODY --- */
    .modal-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        font-weight: 600;
        font-size: 13px;
        margin-bottom: 8px;
        display: block;
        color: #555;
    }

    .form-group label .required {
        color: #dc3545;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
        outline: none;
        font-size: 13px;
        transition: border-color 0.2s;
        box-sizing: border-box;
    }
    .form-control:focus {
        border-color: #484BE0;
    }

    /* --- FOOTER --- */
    .modal-footer {
        padding: 15px 20px;
        border-top: 1px solid #f0f0f0;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        background-color: #fff;
    }

    .btn-secondary {
        background-color: #fff;
        color: #333;
        border: 1px solid #ddd;
        padding: 8px 20px;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 13px;
    }
    .btn-secondary:hover {
        background-color: #f9f9f9;
        border-color: #ccc;
    }

    .btn-save {
        background-color: #484BE0;
        color: white;
        border: none;
        padding: 8px 25px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
        box-shadow: 0 2px 5px rgba(72, 75, 224, 0.3);
        font-size: 13px;
    }
    .btn-save:hover {
        background-color: #3a3dc7;
    }
</style>

<!-- Modal Thêm bộ môn -->
<div class="modal-overlay" id="addModal">
    <div class="modal-dialog">
        <div class="modal-header">
            <div class="modal-title">Thêm bộ môn mới</div>
            <button type="button" class="btn-close-custom close-modal">&times;</button>
        </div>
        
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="form-group">
                    <label>Mã bộ môn <span class="required">*</span></label>
                    <input type="text" name="MaBoMon" class="form-control" placeholder="VD: CNPM" required>
                </div>

                <div class="form-group">
                    <label>Tên bộ môn <span class="required">*</span></label>
                    <input type="text" name="TenBoMon" class="form-control" placeholder="VD: Công nghệ phần mềm" required>
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close-modal">Hủy</button>
                <button type="submit" class="btn btn-save">Lưu</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var modal = document.getElementById('addModal');
        var btnOpen = document.getElementById('btnOpenModal');
        var btnCloses = document.querySelectorAll('#addModal .close-modal');

        if (btnOpen) {
            btnOpen.addEventListener('click', function (e) {
                e.preventDefault();
                modal.classList.add('show');
            });
        }

        btnCloses.forEach(function(btn) {
            btn.addEventListener('click', function () {
                modal.classList.remove('show');
            });
        });

        window.addEventListener('click', function (e) {
            if (e.target == modal) {
                modal.classList.remove('show');
            }
        });
    });
</script>
