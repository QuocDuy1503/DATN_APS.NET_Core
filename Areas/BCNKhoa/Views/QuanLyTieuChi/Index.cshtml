</div>

<div id="tempMessages" data-success="@TempData["SuccessMessage"]" data-error="@TempData["ErrorMessage"]"></div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const criteriaBody = document.getElementById('criteriaBody');
    const addButton = document.getElementById('btnAddInline');
    const totalWeightEl = document.getElementById('totalWeight');
    const weightStatusEl = document.getElementById('weightStatus');

    const getWeightInputs = () => Array.from(criteriaBody.querySelectorAll('.weight-input'));

    function renumberRows() {
        const rows = Array.from(criteriaBody.querySelectorAll('tr')).filter(r => !r.classList.contains('empty-row'));
        rows.forEach((row, idx) => {
            row.dataset.index = idx;
            const sttDisplay = row.querySelector('.stt-display');
            const sttInput = row.querySelector('.stt-input');
            const idInput = row.querySelector('input[name$=".Id"]');
            const tenInput = row.querySelector('input[name*="TenTieuChi"]');
            const moTaInput = row.querySelector('textarea[name*="MoTa"]');
            const trongSoInput = row.querySelector('input[name*="TrongSo"]');
            const diemInput = row.querySelector('input[name*="DiemToiDa"]');

            sttDisplay.textContent = idx + 1;
            if (sttInput) {
                sttInput.name = `items[${idx}].Stt`;
                sttInput.value = idx + 1;
            }
            if (idInput) idInput.name = `items[${idx}].Id`;
            if (tenInput) tenInput.name = `items[${idx}].TenTieuChi`;
            if (moTaInput) moTaInput.name = `items[${idx}].MoTa`;
            if (trongSoInput) trongSoInput.name = `items[${idx}].TrongSo`;
            if (diemInput) diemInput.name = `items[${idx}].DiemToiDa`;
        });
        calcTotalWeight();
    }

    function calcTotalWeight() {
        let sum = 0;
        getWeightInputs().forEach(inp => {
            const val = parseFloat(inp.value);
            if (!isNaN(val)) sum += val;
        });

        totalWeightEl.textContent = `${sum.toFixed(2)}%`;
        const valid = sum >= 100;
        weightStatusEl.textContent = valid ? '(Đủ 100%)' : '(Chưa đủ 100%)';
        weightStatusEl.style.color = valid ? '#28a745' : 'red';
    }

    function createNewRow() {
        const emptyRow = criteriaBody.querySelector('.empty-row');
        if (emptyRow) emptyRow.remove();

        const newIndex = criteriaBody.querySelectorAll('tr').length;
        const newRow = document.createElement('tr');
        newRow.innerHTML = `
            <td class="text-center stt"><span class="stt-display"></span><input type="hidden" name="items[${newIndex}].Id" value="0" /><input type="hidden" class="stt-input" name="items[${newIndex}].Stt" value="${newIndex + 1}" /></td>
            <td><input type="text" name="items[${newIndex}].TenTieuChi" class="form-control" required></td>
            <td><textarea name="items[${newIndex}].MoTa" class="form-control" rows="1"></textarea></td>
            <td><input type="number" name="items[${newIndex}].TrongSo" class="form-control input-number weight-input" min="0" max="100" step="0.1" required></td>
            <td><input type="number" name="items[${newIndex}].DiemToiDa" class="form-control input-number" min="0" step="0.1" required></td>
            <td class="text-center">
                <button type="button" class="btn-remove-row btn-remove-new"><i class="fa-solid fa-trash"></i></button>
            </td>`;

        criteriaBody.appendChild(newRow);
        newRow.querySelectorAll('.weight-input').forEach(inp => inp.addEventListener('input', calcTotalWeight));
        newRow.querySelector('.btn-remove-new').addEventListener('click', () => {
            newRow.remove();
            if (!criteriaBody.querySelectorAll('tr').length) {
                criteriaBody.innerHTML = '<tr><td colspan="6" class="empty-row" style="text-align:center; padding: 16px; color:#777;">Chưa có tiêu chí cho loại phiếu này.</td></tr>';
            }
            renumberRows();
        });
        renumberRows();
        const firstInput = newRow.querySelector('input[name*="TenTieuChi"]');
        firstInput?.focus();
    }

    addButton?.addEventListener('click', createNewRow);

    document.querySelectorAll('.weight-input').forEach(inp => inp.addEventListener('input', calcTotalWeight));
    renumberRows();

    function submitDelete(id) {
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        const form = document.createElement('form');
        form.method = 'post';
        form.action = '@Url.Action("Delete", "QuanLyTieuChi", new { area = "BCNKhoa" })';
        form.innerHTML = `
            <input type="hidden" name="__RequestVerificationToken" value="${token}">
            <input type="hidden" name="id" value="${id}">
            <input type="hidden" name="loaiPhieuId" value="@Model?.SelectedLoaiPhieuId">
            <input type="hidden" name="dotId" value="@Model?.SelectedDotId">`;
        document.body.appendChild(form);
        form.submit();
    }

    document.querySelectorAll('.btn-delete-existing').forEach(btn => {
        btn.addEventListener('click', () => {
            const id = btn.dataset.id;
            Swal.fire({
                title: 'Xóa tiêu chí?',
                text: 'Hành động này không thể hoàn tác.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then(result => {
                if (result.isConfirmed) {
                    submitDelete(id);
                }
            });
        });
    });

    const msgHolder = document.getElementById('tempMessages');
    const successMsg = msgHolder?.dataset.success;
    const errorMsg = msgHolder?.dataset.error;
    if (successMsg) {
        Swal.fire({ icon: 'success', title: 'Thành công', text: successMsg });
    }
    if (errorMsg) {
        Swal.fire({ icon: 'error', title: 'Thông báo', text: errorMsg });
    }
</script>







