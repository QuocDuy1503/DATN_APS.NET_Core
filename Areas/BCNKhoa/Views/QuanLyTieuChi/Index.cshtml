                            {
                                <option value="@opt.Value" selected="@(opt.Value == selectedLoaiPhieuId ? "selected" : null)">@opt.Text</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Thang điểm:</label>
                        <input type="text" class="form-control" value="10" readonly style="background:#f9f9f9;">
                    </div>
                </div>
            </form>
        </div>

        <form asp-action="SaveAll" method="post">
            @Html.AntiForgeryToken()
