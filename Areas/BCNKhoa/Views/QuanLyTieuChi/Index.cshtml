                            <th style="width: 50px; text-align: center;">STT</th>
                            <th style="width: 250px;">Tên tiêu chí</th>
                            <th>Mô tả / Hướng dẫn chấm</th>
                            <th style="width: 100px; text-align: center;">Trọng số (%)</th>
                            <th style="width: 100px; text-align: center;">Điểm tối đa</th>
                            <th style="width: 50px; text-align: center;">Xóa</th>
                        </tr>
                    </thead>
                    <tbody id="criteriaBody">
