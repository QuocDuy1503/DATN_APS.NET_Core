<style>
    .content-card {
        background: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
        min-height: calc(100vh - 140px);
    }

    .page-title {
        font-size: 20px;
        font-weight: 700;
        color: #2c3e50;
        margin: 0 0 20px 0;
        text-transform: uppercase;
    }

    /* --- FORM CHỌN LOẠI PHIẾU --- */
    .setup-header {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 6px;
        border: 1px solid #eee;
        margin-bottom: 25px;
    }

    .setup-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 20px;
    }

    /* --- BẢNG NHẬP TIÊU CHÍ --- */
    .criteria-table th {
        background-color: #f1f3f5;
        color: #333;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 12px;
        vertical-align: middle;
    }

    .criteria-table input,
    .criteria-table textarea {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 8px;
        width: 100%;
        font-size: 13px;
        resize: vertical; /* Cho phép kéo giãn chiều cao textarea */
    }

    .criteria-table input:focus,
    .criteria-table textarea:focus {
        border-color: #D71920;
        outline: none;
    }

    /* Cột trọng số và điểm */
    .input-number {
        text-align: center;
        font-weight: 600;
    }

    /* Nút xóa dòng */
    .btn-remove-row {
        color: #dc3545;
        cursor: pointer;
        font-size: 16px;
        background: none;
        border: none;
        transition: 0.2s;
    }
    .btn-remove-row:hover {
        color: #a71d2a;
        transform: scale(1.1);
    }

    /* --- THANH TỔNG KẾT (FOOTER FIXED) --- */
    .total-summary-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #fff;
        padding: 15px 20px;
        border-top: 2px solid #eee;
        margin-top: 10px;
    }

    .total-label {
        font-size: 14px;
        font-weight: 600;
        color: #555;
    }

    .total-value {
        font-size: 18px;
        font-weight: 700;
        color: #D71920;
    }

    .total-valid {
        color: #28a745 !important; /* Màu xanh khi đủ 100% */
    }

    .btn-add-row {
        background-color: #e7f1ff;
        color: #0d6efd;
        border: 1px dashed #0d6efd;
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
    }
    .btn-add-row:hover {
        background-color: #d0e3ff;
    }
</style>

<div class="content-body">
