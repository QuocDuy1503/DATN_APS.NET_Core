                        {
                            for (int i = 0; i < Model.TieuChis.Count; i++)
                            {
                                var item = Model.TieuChis[i];
                                <tr data-index="@i">
                                    <td class="text-center stt"><span class="stt-display">@(item.Stt ?? (i + 1))</span><input type="hidden" name="items[@i].Id" value="@item.Id" /><input type="hidden" class="stt-input" name="items[@i].Stt" value="@(item.Stt ?? (i + 1))" /></td>
                                    <td><input type="text" name="items[@i].TenTieuChi" class="form-control" value="@item.TenTieuChi" required></td>
                                    <td><textarea name="items[@i].MoTa" class="form-control" rows="1">@item.MoTa</textarea></td>
                                    <td><input type="number" name="items[@i].TrongSo" class="form-control input-number weight-input" value="@item.TrongSo" min="0" max="100" step="0.1" required></td>
                                    <td><input type="number" name="items[@i].DiemToiDa" class="form-control input-number" value="@item.DiemToiDa" min="0" step="0.1" required></td>
                                    <td class="text-center">
                                        <button class="btn-remove-row btn-delete-existing" type="button" data-id="@item.Id"><i class="fa-solid fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="empty-row" style="text-align:center; padding: 16px; color:#777;">Chưa có tiêu chí cho loại phiếu này.</td>
                            </tr>
                        }
                    </tbody>
                </table>
