@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<DATN_TMS.Areas.BCNKhoa.Models.ChuyenNganhViewModel>

@{
    ViewData["Title"] = "Quản lý Chuyên ngành";
}

<style>
    /* CSS gốc từ file mẫu */
    .content-card {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        min-height: calc(100vh - 140px);
    }
    .table-responsive { width: 100%; margin-bottom: 20px; flex: 1; margin-top: 15px; }
    .page-title { font-size: 20px; font-weight: 700; color: #2c3e50; margin: 0; text-transform: uppercase; }
    
    /* CSS cho Toolbar theo demo */
    .toolbar-row { display: flex; justify-content: flex-end; gap: 15px; margin-bottom: 10px; }
    .toolbar-input { padding: 8px 12px; border: 1px solid #ddd; border-radius: 4px; outline: none; }
    .toolbar-input:focus { border-color: #484BE0; }
    .filter-label { font-weight: 600; font-size: 14px; color: #555; }

    /* Nút Purple theo demo */
    .btn-purple {
        background-color: #6f42c1; /* Màu tím tương tự demo */
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 14px;
    }
    .btn-purple:hover { background-color: #59359a; color: white; }

    /* CSS Table */
    table { width: 100%; border-collapse: collapse; }
    th { background-color: #f8f9fa; padding: 12px; text-align: left; font-weight: 700; border-bottom: 2px solid #eee; font-size: 13px; color: #444; white-space: nowrap; }
    td { padding: 12px; border-bottom: 1px solid #eee; vertical-align: middle; font-size: 13px; color: #333; }
    
    /* Pagination */
    .pagination-container { display: flex; justify-content: center; padding-top: 15px; border-top: 1px solid #eee; }
    .pagination { display: flex; padding-left: 0; list-style: none; gap: 5px; margin-bottom: 0; }
    .pagination li a, .pagination li span { padding: 8px 16px; border: 1px solid #dee2e6; border-radius: 4px; color: #333; text-decoration: none; background-color: #fff; transition: all 0.2s; }
    .pagination li a:hover { background-color: #e9ecef; border-color: #dee2e6; }
    .pagination li.active span { background-color: #6f42c1; color: white; border-color: #6f42c1; } /* Màu tím cho phân trang active */
    .pagination li.disabled span { color: #6c757d; pointer-events: none; }

    /* Action buttons */
    .action-btn { background: none; border: none; cursor: pointer; font-size: 16px; margin: 0 4px; transition: color 0.2s; }
    .btn-edit-icon { color: #0d6efd; }
    .btn-delete-icon { color: #dc3545; }
    .btn-edit-icon:hover { color: #0b5ed7; }
    .btn-delete-icon:hover { color: #bb2d3b; }
</style>

<div class="content-body">
    <div class="content-card">
        <h2 class="page-title" style="margin-bottom: 20px;">Quản lý Chuyên ngành</h2>

        <div class="toolbar-row">
            <div style="display:flex; align-items:center; gap:5px;">
                <span class="filter-label">Tìm kiếm:</span>
                <input type="text" id="searchInput" name="searchString" 
                       value="@ViewBag.CurrentFilter" 
                       class="toolbar-input" 
                       placeholder="Nhập tìm kiếm..." 
                       style="width: 200px;">
            </div>
            
            <button type="button" class="btn-purple" id="btnOpenModal">
                <i class="fa-solid fa-plus"></i> Thêm chuyên ngành
            </button>
        </div>

        <div class="table-responsive">
            <table id="tableChuyenNganh">
                <thead>
                    <tr>
                        <th style="width: 120px;">Mã chuyên ngành</th>
                        <th>Tên Chuyên ngành</th>
                        <th>Tên viết tắt</th>
                        <th>Người tạo</th>
                        <th style="width: 110px;">Ngày tạo</th>
                        <th>Người sửa</th>
                        <th style="width: 110px;">Ngày sửa</th>
                        <th class="text-center" style="width: 100px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><span>@(item.Stt.HasValue ? item.Stt : "-")</span></td>
                                <td><span>@item.TenChuyenNganh</span></td>
                                <td>@item.TenVietTat</td>
                                <td>@item.NguoiTao</td>
                                <td>@(item.NgayTao.HasValue ? item.NgayTao.Value.ToString("dd/MM/yyyy") : "-")</td>
                                <td>@item.NguoiSua</td>
                                <td>@(item.NgaySua.HasValue ? item.NgaySua.Value.ToString("dd/MM/yyyy") : "-")</td>

                                <td class="text-center">
                                    <button class="action-btn btn-edit-icon btn-edit" 
                                            data-id="@item.Id" 
                                            title="Sửa">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </button>
                                    
                                    <button class="action-btn btn-delete-icon btn-delete-confirm" 
                                            data-id="@item.Id" 
                                            data-name="@item.TenChuyenNganh" 
                                            title="Xóa">
                                        <i class="fa-solid fa-xmark"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center text-muted p-4">Không tìm thấy dữ liệu phù hợp.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        <partial name="_CreateModal" />

        <partial name="_EditModal" />

        <div class="pagination-container">
             @Html.PagedListPager(Model, 
            page => Url.Action("Index", new { page, searchString = ViewBag.CurrentFilter }),
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                LinkToPreviousPageFormat = "«",
                LinkToNextPageFormat = "»",
                EllipsesFormat = "...",
                MaximumPageNumbersToDisplay = 5
            })
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="deleteId" />
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.addEventListener("DOMContentLoaded", function () {
    // --- TempData Messages ---
    var successMsg = '@Html.Raw(TempData["SuccessMessage"])';
    var errorMsg = '@Html.Raw(TempData["ErrorMessage"])';

    if (successMsg && successMsg.length > 0) {
        Swal.fire({
            icon: 'success',
            title: 'Thành công!',
            text: successMsg,
            confirmButtonText: 'Đóng',
            confirmButtonColor: '#6f42c1',
            timer: 3000
        });
    }

    if (errorMsg && errorMsg.length > 0) {
        Swal.fire({
            icon: 'error',
            title: 'Có lỗi xảy ra',
            text: errorMsg,
            confirmButtonText: 'Kiểm tra lại',
            confirmButtonColor: '#d33'
        });
    }

    // --- Delete Confirm ---
    function handleDeleteClick() {
        const id = this.getAttribute('data-id');
        const name = this.getAttribute('data-name');

        Swal.fire({
            title: 'Xác nhận xóa?',
            html: `Bạn có chắc chắn muốn xóa chuyên ngành <strong>"${name}"</strong>?<br>Hành động này không thể hoàn tác!`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Vâng, xóa nó!',
            cancelButtonText: 'Hủy bỏ'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        });
    }

    // --- Bind delete events ---
    window.rebindDeleteEvents = function() {
        const deleteBtns = document.querySelectorAll('.btn-delete-confirm');
        deleteBtns.forEach(btn => {
            btn.removeEventListener('click', handleDeleteClick);
            btn.addEventListener('click', handleDeleteClick);
        });
    };
    rebindDeleteEvents();

    // --- Bind edit events ---
    window.rebindEditEvents = function() {
        const editBtns = document.querySelectorAll('.btn-edit');
        editBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                openEditModal(id);
            });
        });
    };
    rebindEditEvents();

    // --- Search Real-time ---
    const searchInput = document.getElementById('searchInput');
    const tableContainer = document.querySelector('.table-responsive');
    const paginationContainer = document.querySelector('.pagination-container');
    let timeout = null;

    if (searchInput) {
        searchInput.addEventListener('input', function() {
            clearTimeout(timeout);
            timeout = setTimeout(performSearch, 500);
        });
    }

    function performSearch() {
        const keyword = searchInput.value;
        const url = `@Url.Action("Index")?searchString=${encodeURIComponent(keyword)}`;

        fetch(url)
            .then(response => response.text())
            .then(html => {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                if (tableContainer) tableContainer.innerHTML = doc.querySelector('.table-responsive').innerHTML;
                if (paginationContainer) paginationContainer.innerHTML = doc.querySelector('.pagination-container').innerHTML;
                rebindDeleteEvents();
                rebindEditEvents();
            })
            .catch(err => console.error('Lỗi tìm kiếm:', err));
    }
});
</script>